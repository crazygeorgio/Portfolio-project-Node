block variables
- var svg = "./assets/img/sprite.svg" 
- var config = {defaultTitle : 'Да ладно, и так тоже работает?'}

mixin svg(name, type)
    svg(role="img" class= (type ? type : "svg-icon") + " " + (type ? type : "svg-icon") + "_" + name)
        use(xlink:href=svg + "#" + name)

doctype html
html
    head
        meta(charset="utf-8")
        title= (pageTitle ? pageTitle : title ? title : config.defaultTitle)
        meta(content="" name="author")
        meta(content="" name="description")
        meta(content="" name="keywords")
        meta(content="width=device-width, initial-scale=1" name="viewport")
        meta(content="IE=edge" http-equiv="x-ua-compatible")
        meta(name="format-detection" content="telephone=no")
        meta(name="skype_toolbar" content="skype_toolbar_parser_compatible")

        //- favicon block start
        link(rel='icon', href='./assets/img/fav_forest.png', type='image/png')
        link(rel='shortcut icon', href='./assets/img/fav_forest.png', type='image/png')
        //- favicon block end

        //- link(rel='stylesheet' href='./assets/css/foundation.css')
        link(rel='stylesheet' href='./assets/css/app.css')
        script(src='./assets/js/foundation.js' defer)
        script(src='./assets/js/app.js' defer)

        <!--[if lt IE 9]>
        script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
        <![endif]-->

    body
        block content